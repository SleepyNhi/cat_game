<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sleepynhi.cat_game.MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/loginpic2">


        <EditText
            android:id="@+id/activity_main_em"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_marginTop="130dp"
            android:hint="Enter a user name"
            android:textSize="25dp"
            android:background="@android:color/black"
            android:alpha="0.5"
            android:gravity="center"
            android:inputType="textEmailAddress"/>

        <EditText
        android:id="@+id/activity_main_pw"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:hint="Create a password"
        android:gravity="center"
            android:background="@android:color/black"
            android:alpha="0.5"
        android:textSize="15dp"
        android:inputType="textWebPassword"/>





    <Button
        android:id="@+id/activity_main_login"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:background="@android:color/black"
        android:alpha="0.5"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/activity_sharedpreference_clear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Clear Cache"
        android:layout_marginTop="130dp"
        android:background="@null"
        android:textColor="@android:color/black"

        android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>
